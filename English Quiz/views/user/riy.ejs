<div class="container-fluid">
    <div class="d-flex justify-content-center align-items-center">
        <h1>Resimlerin İfade Ettiği İngilizce Kelimeyi Yaz</h1>
    </div>

    <div class="col-md-8 mt-4 d-flex justify-content-center align-items-center"
        id="oyunBaslatmaBilgisi">
        <h5>Rastgele Resimlerin İngilizce Çevirisini Yaparak Puan Kazanmaya
            Başlamak İçin Testi
            Başlat
        </h5>
        <label for>
            <button class="btn btn-primary"
                id="testiBaslat"
                onclick="oyunuBaslat()">Başla
            </button>
        </label>
    </div>

    <div class="row d-flex justify-content-center align">
        <div class="justify-content-center" id="oyunEkrani" hidden>

            <div
                class="row mt-2 d-flex justify-content-center align-items-center">
                <div
                    class="col-md-2 rounded-3 mb-1 p-2 bg-primary d-flex justify-content-center align-items-center"
                    id = "puanDiv">
                    <label for class="fw-bold fs-6">
                        <img src="/static/images/correct.gif"
                            style="width: 50px; " alt>
                    </label>
                    <label for class="fw-bold fs-5"
                        style="margin-left: 20px"
                        id="toplamPuan">0</label>
                </div>
            </div>

            <div class="d-flex justify-content-center align-items-center">
                <div id="soruResmi"
                    class="col-md-5 mt-4 text-center border border-2 border-info bg-secondary"
                    style="--bs-bg-opacity: .3;">
                    <!-- Buraya img elementi gelecek soru ile ilgili -->
                </div>
            </div>
            <div id="letterBoxes"
                class="mt-4 d-flex justify-content-center align-items-center">
                <!-- Buraya harf kutuları gelecek -->
            </div>
            <div
                class="mt-4 d-flex justify-content-center align-items-center">

                <button class="btn btn-primary" id="cevaplaBtn">Cevapla</button>
            </div>

        </div>
    </div>
</div>
